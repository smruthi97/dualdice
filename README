ðŸ§© Custom Hook

export function useTogglePlayer() {
  const [currentPlayer, setCurrentPlayer] = useState(1);

  const togglePlayer = () => {
    setCurrentPlayer((prev) => (prev === 1 ? 2 : 1));
  };

  const resetPlayer = () => {
    setCurrentPlayer(1);
  };

  return { currentPlayer, togglePlayer, resetPlayer };
}

